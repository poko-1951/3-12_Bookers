<body>
  <div class="index">
    <h1 class="title">Books</h1>
    <table>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
        </tr>
        <% @books.each do |book|%>
          <tr>
            <td><%= book.title%></td>
            <td><%= book.body%></td>
            <td><%= link_to "show", book_path(book.id)%></td>
            <td><%= link_to "edit", edit_book_path(book.id)%></td>
            <td><%= link_to "destroy", book_path(book.id)%></td>
          </tr>
        <% end %>
    </table>
  </div>
  <div class="create">
    <h2>New Book</h2>
    <%= form_with model: Book.new , url: "/books", method: :post do |f|%>
      <label>Title</label>
      <%= f.text_field :title%>

      <label>Body</label>
      <%= f.text_area :body%>

      <%= f.submit "Create Book"%>
    <% end %>
  </div>

</body>