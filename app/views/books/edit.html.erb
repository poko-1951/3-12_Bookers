<body>
  <h1>Editing Book</h1>
  <% if @book.errors.any? %>
  <div>
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
  </div>
<% end %>
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f|%>
    <label>Title</label>
    <%= f.text_field :title%>

    <label>Body</label>
    <%= f.text_area :body%>

    <%= f.submit "Update Book"%>
  <% end %>
  <div class="button">
    <p class="link"><%= link_to "Show",book_path(@book.id) %></p>
    <p class="line">|</p>
    <p class="link"><%= link_to "Back",books_path %></p>
  </div>
</body>